---
import { SignIn } from "auth-astro/components";
import ThemeButton from "@components/ThemeToggle";
import { ViewTransitions } from "astro:transitions";
---

<>
    <head>
        <ViewTransitions />
        <title>Log in</title>
    </head>
    <body class="bg-zinc-100 dark:bg-zinc-800 dark:text-zinc-300">
        <div class="text-center">
            <ThemeButton client:only />
        </div>
        <div
            class="flex flex-col w-full h-full font-mono justify-center items-center my-20"
        >
            <SignIn
                class="flex flex-row bg-[#4285F4] font-roboto items-center text-white"
                provider="google"
            >
                <img src="/googleLogo.svg" alt="google-official-logo" />
                <p class="p-2">Sign in with Google</p>
            </SignIn>
        </div>
    </body>
</>

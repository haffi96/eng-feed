---
import { SignIn } from "auth-astro/components";
import ThemeButton from "@components/ThemeToggle";
import { ViewTransitions } from "astro:transitions";
---

<html>
    <head>
        <ViewTransitions />
        <title>Log in</title>
    </head>
    <body class="bg-zinc-300 dark:bg-zinc-800">
        <div class="text-center">
            <ThemeButton client:only />
        </div>
        <div
            class="flex flex-col w-full h-full font-mono justify-center items-center my-20"
        >
            <SignIn class="bg-[#4285F4] p-2" provider="google">
                Sign in with Google
            </SignIn>
        </div>
    </body>
</html>

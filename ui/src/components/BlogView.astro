---
import type { Post } from "src/types";

const { blog } = Astro.props as { blog: Post };

const userLocale = Intl.NumberFormat().resolvedOptions().locale || "en-US";
---

<a href=`${blog.link}`>
  <body>
    <div
      class="flex flex-col space-y-3 p-3
            mb-3 rounded-lg my-5 justify-center hover:bg-zinc-600
            shadow-md shadow-zinc-600 transition:ease-in-out duration-200"
    >
      <p class="underline">{blog.companyName}</p>
      <p class="font-bold text-lg">{blog.title}</p>
      <p>{blog.author ? `By ${blog.author}` : null}</p>
      <p>
        {
          new Date(blog.publishedDate).toLocaleDateString(userLocale, {
            weekday: "long",
            year: "numeric",
            month: "long",
            day: "numeric",
          })
        }
      </p>
    </div>
  </body>
</a>

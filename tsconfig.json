{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "target": "es2016",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": [
                "src/components/*"
            ],
            "@layouts/*": [
                "src/layouts/*"
            ],
            "@/*": [
                "src/*"
            ],
            "@aws*": [
                "src/aws/*"
            ]
        },
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
    },
    "exclude": [
        "node_modules",
        "cdk.out"
    ],
}